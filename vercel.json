{
  "version": 2,
  "builds": [
    {
      "src": "index.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "config/**",
          "route/**",
          "middleware/**",
          "models/**",
          "utils/**"
        ]
      }
    },
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "/client/dist/$1",
      "headers": {
        "Cache-Control": "s-maxage=31536000, immutable"
      }
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}

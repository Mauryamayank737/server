{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "config/**",
          "route/**",
          "middleware/**",
          "models/**",
          "utils/**"
        ]
      }
    },
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server.js"
    },
    {
      "src": "/(.*)",
      "dest": "client/dist/$1",
      "headers": {
        "Cache-Control": "s-maxage=31536000, immutable"
      }
    }
  ],
  "functions": {
    "server.js": {
      "memory": 3008,
      "maxDuration": 30,
      "runtime": "nodejs18.x"
    }
  },
  "env": {
    "NODE_ENV": "production"
  }
}